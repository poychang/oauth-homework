@page "/methods/coffeeshop/{id}"
@using OAuthHomework.Models
@using System.Text.Json

<data>
    @data
</data>

@code {
    [Parameter]
    public string Id { get; set; }

    private string data;
    private Coffee coffee;
    private List<Coffee> Coffees = new List<Coffee>()
    {
        new Coffee { Id = 1, Title = "Black", Description = "Black coffee is as." },
        new Coffee { Id = 2, Title = "Latte", Description = "As the most popular." },
        new Coffee { Id = 3, Title = "Cappuccino", Description = "Cappuccino is a latte." },
    };

    protected override async Task OnInitializedAsync()
    {
        coffee = Coffees.Find(o => o.Id == int.Parse(Id));
        data = JsonSerializer.Serialize(coffee);
    }
}
